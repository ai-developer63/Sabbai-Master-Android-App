<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <set>
            <!-- Define your pressed state animation here -->
            <objectAnimator
                android:propertyName="scaleX"
                android:valueTo="0.9"
                android:valueType="floatType"
                android:duration="100"/>
            <objectAnimator
                android:propertyName="scaleY"
                android:valueTo="0.9"
                android:valueType="floatType"
                android:duration="100"/>
        </set>
    </item>
    <item android:state_focused="true">
        <set>
            <!-- Define your focused state animation here -->
            <objectAnimator
                android:propertyName="scaleX"
                android:valueTo="1.1"
                android:valueType="floatType"
                android:duration="100"/>
            <objectAnimator
                android:propertyName="scaleY"
                android:valueTo="1.1"
                android:valueType="floatType"
                android:duration="100"/>
        </set>
    </item>
    <!-- Default state animation -->
    <item>
        <set>
            <!-- Define your default state animation here -->
            <objectAnimator
                android:propertyName="scaleX"
                android:valueTo="1.0"
                android:valueType="floatType"
                android:duration="100"/>
            <objectAnimator
                android:propertyName="scaleY"
                android:valueTo="1.0"
                android:valueType="floatType"
                android:duration="100"/>
        </set>
    </item>
</selector>