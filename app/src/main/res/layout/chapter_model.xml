<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <!-- Topic Title -->
    <TextView
        android:id="@+id/chapterTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:text="Chapter Title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000" />

    <!-- Chapter 1 Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewChapter1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/chapterTitle"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp">

        <!-- Chapter 1 Content -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/chapter1Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sub Chapter 1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- Chapter 2 Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewChapter2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardViewChapter1"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp">

        <!-- Chapter 2 Content -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/chapter2Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sub Chapter 2"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
